<div class="column1">
  <ul class="urls scrape">
    <% @site.urls.scrapable.order_for_scrape.each do |url| %>
       <%= content_tag :li, class: "#{@url == url ? ' selected' : nil}" do %>
        <%= link_to_if url != @url, url.request_uri, calculate_scrape_result_path(url), title: url.url %> - <%= url.content_type.try(:to_s) %> 
            <%= url.url_group ? "- #{url.url_group.name}" : '' %>
      <% end %>
    <% end %>
  </ul>

  <p>Comments: <%= @url.comments %></p>

  <%= javascript_tag do %>
      $(function() {
        $('.urls').scrollTop(
          $('.urls li:nth-child(<%= [@site.urls.scrapable.order_for_scrape.index(@url) - 3, 1].max %>)')
            .position().top - $('.urls').position().top
        );
      });
  <% end %>
</div>
